{
	"name": "xmulay",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:generate": "drizzle-kit generate:sqlite",
		"db:migrate": "drizzle-kit push:sqlite",
		"db:studio": "drizzle-kit studio",
		"db:up": "drizzle-kit up:sqlite",
		"dev": "vite dev --host",
		"lint": "pnpm run lint:js && pnpm run lint:style",
		"lint:fix": "pnpm run lint:js --fix && pnpm run lint:style --fix",
		"lint:js": "eslint .",
		"lint:style": "stylelint \"src/**/*.{css,scss,svelte}\"",
		"preview": "vite preview --host",
		"test": "pnpm run test:integration && pnpm run test:unit",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"dependencies": {
		"@auth/sveltekit": "^0.14.0",
		"@sveltejs/adapter-node": "^5.0.1",
		"@twurple/api": "^7.1.0",
		"@twurple/auth": "^7.1.0",
		"better-sqlite3": "^11.5.0",
		"drizzle-orm": "^0.30.4",
		"svelte-inview": "^4.0.4"
	},
	"devDependencies": {
		"@playwright/test": "^1.42.1",
		"@stylistic/eslint-plugin": "^1.7.0",
		"@sveltejs/kit": "^2.5.27",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/better-sqlite3": "^7.6.9",
		"@types/eslint": "^8.56.5",
		"@typescript-eslint/eslint-plugin": "^7.2.0",
		"@typescript-eslint/parser": "^7.2.0",
		"drizzle-kit": "^0.20.14",
		"eslint": "^8.57.0",
		"eslint-plugin-perfectionist": "^2.7.0",
		"eslint-plugin-svelte": "^2.45.1",
		"postcss": "^8.4.35",
		"postcss-html": "^1.6.0",
		"sass": "^1.72.0",
		"stylelint": "^16.2.1",
		"stylelint-config-clean-order": "^5.4.1",
		"stylelint-config-standard-scss": "^13.0.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tslib": "^2.6.2",
		"typescript": "^5.5.0",
		"vite": "^5.4.4",
		"vitest": "^1.3.1"
	}
}