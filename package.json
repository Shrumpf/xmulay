{
	"name": "xmulay",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:generate": "drizzle-kit generate:sqlite",
		"db:migrate": "drizzle-kit push:sqlite",
		"db:studio": "drizzle-kit studio",
		"db:up": "drizzle-kit up:sqlite",
		"dev": "vite dev --host",
		"lint": "pnpm run lint:js && pnpm run lint:style",
		"lint:fix": "pnpm run lint:js --fix && pnpm run lint:style --fix",
		"lint:js": "eslint .",
		"lint:style": "stylelint \"src/**/*.{css,scss,svelte}\"",
		"preview": "vite preview --host",
		"test": "pnpm run test:integration && pnpm run test:unit",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"dependencies": {
		"@auth/sveltekit": "^1.11.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@twurple/api": "^7.4.0",
		"@twurple/auth": "^7.4.0",
		"better-sqlite3": "^12.4.1",
		"drizzle-orm": "^0.44.7",
		"svelte-inview": "^4.0.4",
		"typescript-eslint": "^8.46.2"
	},
	"devDependencies": {
		"@auth/core": "^0.41.0",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.38.0",
		"@playwright/test": "^1.56.1",
		"@stylistic/eslint-plugin": "^5.5.0",
		"@sveltejs/kit": "^2.47.3",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/better-sqlite3": "^7.6.13",
		"@types/eslint": "^9.6.1",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"drizzle-kit": "^0.31.5",
		"eslint": "^9.38.0",
		"eslint-plugin-perfectionist": "^4.15.1",
		"eslint-plugin-svelte": "^3.12.5",
		"globals": "^16.4.0",
		"postcss": "^8.5.6",
		"postcss-html": "^1.8.0",
		"sass": "^1.93.2",
		"stylelint": "^16.25.0",
		"stylelint-config-clean-order": "^7.0.0",
		"stylelint-config-standard-scss": "^16.0.0",
		"svelte": "^5.41.4",
		"svelte-check": "^4.3.3",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vite": "^7.1.12",
		"vitest": "^4.0.3"
	}
}