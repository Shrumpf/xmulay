{
	"name": "xmulay",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:generate": "drizzle-kit generate:sqlite",
		"db:migrate": "drizzle-kit push:sqlite",
		"db:studio": "drizzle-kit studio",
		"db:up": "drizzle-kit up:sqlite",
		"dev": "vite dev --host",
		"lint": "pnpm run lint:js && pnpm run lint:style",
		"lint:fix": "pnpm run lint:js --fix && pnpm run lint:style --fix",
		"lint:js": "eslint .",
		"lint:style": "stylelint \"src/**/*.{css,scss,svelte}\"",
		"preview": "vite preview --host",
		"test": "pnpm run test:integration && pnpm run test:unit",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"dependencies": {
		"@auth/sveltekit": "^1.7.2",
		"@sveltejs/adapter-node": "^5.2.9",
		"@twurple/api": "^7.2.0",
		"@twurple/auth": "^7.2.0",
		"better-sqlite3": "^11.5.0",
		"drizzle-orm": "^0.36.0",
		"svelte-inview": "^4.0.4",
		"typescript-eslint": "^8.12.2"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.1.0",
		"@eslint/js": "^9.13.0",
		"@playwright/test": "^1.48.2",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@sveltejs/kit": "^2.7.3",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/better-sqlite3": "^7.6.11",
		"@types/eslint": "^9.6.1",
		"@typescript-eslint/eslint-plugin": "^8.12.2",
		"@typescript-eslint/parser": "^8.12.2",
		"drizzle-kit": "^0.27.0",
		"eslint": "^9.13.0",
		"eslint-plugin-perfectionist": "^3.9.1",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.11.0",
		"postcss": "^8.4.47",
		"postcss-html": "^1.7.0",
		"sass": "^1.80.5",
		"stylelint": "^16.10.0",
		"stylelint-config-clean-order": "^6.1.0",
		"stylelint-config-standard-scss": "^13.1.0",
		"svelte": "^5.1.6",
		"svelte-check": "^4.0.5",
		"tslib": "^2.8.0",
		"typescript": "^5.6.3",
		"vite": "^5.4.10",
		"vitest": "^2.1.4"
	}
}